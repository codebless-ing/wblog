extends /layout/app.pug

block content
  h1(style="text-align:center;") Create your article!
  form(role='form' method='POST' action='/article')
    div.articleInput
      input(type="text" placeholder="Title" name="title").fluid
      textarea(name="body" rows="10" placeholder="Write your message here").fluid
      input(type="text" placeholder="Tags; ex: tag1,tag2,tag3" name="tags").fluid
      button(type="submit") Create
